<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFcc00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Gambar -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back_profil" />

        <!-- Foto Profil dan Icon Edit -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-50dp">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_white"
                android:padding="10dp"
                android:src="@drawable/logobangdit"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/btnEditPhoto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:background="@drawable/circle_white"
                android:padding="6dp"
                android:src="@drawable/ic_edit"
                android:scaleType="centerInside" />
        </FrameLayout>

        <!-- Nama -->
        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textColor="#531607"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Form Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="#531607"
            android:textSize="14sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_edittext"
            android:hint="Wildan Mukmin"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="#531607"
            android:textSize="14sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_edittext"
            android:hint="Wildan.cooliah@gmail.com"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor HP"
            android:textColor="#531607"
            android:textSize="14sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_edittext"
            android:hint="0822-xxxx-xx08"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:inputType="phone" />

        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Perubahan"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:backgroundTint="#531607"
            android:padding="12dp"
            android:textStyle="bold"
            corners="12dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />
    </LinearLayout>
</ScrollView>