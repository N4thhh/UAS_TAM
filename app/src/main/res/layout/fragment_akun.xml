<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD600">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back_profil" />

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_white"
            android:padding="10dp"
            android:src="@drawable/logobangdit"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wildan Mukmin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#531607"
            android:gravity="center"

            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wildan.cooliah@gmail.com"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#531607"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaturan"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#531607" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="16dp"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_outline"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/edit_profil"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="12dp"
                android:paddingVertical="8dp"
                android:text="Profil"
                android:textColor="#531607" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDD" />

            <TextView
                android:id="@+id/favorit"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_fav"
                android:drawablePadding="12dp"
                android:paddingVertical="8dp"
                android:text="Favorit"
                android:textColor="#531607"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDD" />

            <TextView
                android:id="@+id/ulasan_saya"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_ulasan"
                android:drawablePadding="12dp"
                android:paddingVertical="8dp"
                android:text="Ulasan"
                android:textColor="#531607"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bantuan"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#531607" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/pusat_bantuan"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_pusat_bantuan"
                android:text="Pusat Bantuan"
                android:drawablePadding="12dp"
                android:paddingVertical="8dp"
                android:textColor="#531607"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDD"/>

            <TextView
                android:id="@+id/tentang_aplikasi"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_apk"
                android:text="Tentang Aplikasi"
                android:drawablePadding="12dp"
                android:paddingVertical="8dp"
                android:textColor="#531607"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>